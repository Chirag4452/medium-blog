generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String?
  username String @unique
  password String
  posts Blog[]
}

model Blog{
  id Int @id @default(autoincrement())
  author_id Int
  content String
  title String
  published Boolean @default(false)
  author User @relation(fields: [author_id],references: [id])
}